        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
    </div>
    <div class="container">
        <div id="alertMessage" class="alert-message"></div>

        <h1>Edit Profile</h1>
        <form id="profileForm" method="POST">
            <div class="form-group">
                <label for="profilePicture" id="profile_pic" name="img" >Profile Picture</label>
                <div class="upload-container" id="uploadContainer">
                    <input type="file" id="profilePicture" name="profilePicture" accept="image/*" hidden>
                    <img id="profileImage" src="https://robohash.org/random" alt="Profile Picture" class="profile-img">
                    <p class="upload-instructions">Drag here to upload</p>
                </div>
                <div class="upload-options">
                    <button type="button" id="browseButton">Browse Image</button>
                    <button type="button" id="saveImageButton" hidden>Save Image</button>
                </div>
            </div>
            <div class="form-group">
                <label for="name" >Name</label>
                <input type="text" id="name" value="<%= user.username %>" name="name" disabled>
            </div>
            <div class="form-group">
                <label for="place">Place</label>
                <input type="text" id="place" value="<%= user.place %>" name="place" required>
            </div>
            <div class="form-group">
                <label for="description">About Me</label>
                <textarea id="description" name="description" rows="4" required><%= user.about_me %></textarea>
            </div>
            <div class="form-group">
                <label for="instagram">Instagram</label>
                <input type="url" id="instagram" value="<%= user.instagram %>" name="instagram" placeholder="https://instagram.com/yourprofile">
            </div>
            <div class="form-group">
                <label for="linkedin">LinkedIn</label>
                <input type="url" id="linkedin" value="<%= user.linkedin %>" name="linkedin" placeholder="https://linkedin.com/in/yourprofile">
            </div>
            <div class="form-group">
                <label for="github">GitHub</label>
                <input type="url" id="github" value="<%= user.github %>" name="github" placeholder="https://github.com/yourprofile">
            </div>
            <button type="submit" >Save Changes</button>
        </form>
        <footer>
            <p>Made with <i class="fa-solid fa-heart"></i> by CE'26</p>
        </footer>
    </div>
    <script src="form.js"></script>
</body>
</html>
