	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <div class="background-container">
        <div class="stars"></div>
        <div class="twinkling"></div>
    </div>
    <div class="starss">
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
